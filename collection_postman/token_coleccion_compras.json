          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"data\": {\n    \"type\": \"compra\",\n    \"attributes\": {\n      \"productoId\": 1,\n      \"cantidad\": 2\n    }\n  }\n}"
