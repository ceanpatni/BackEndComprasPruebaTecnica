    "description": "Auth + Compras + Comunicaci√≥n con BackendProductos + Inventario",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [

    {
      "name": "Auth - Login",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"username\": \"admin\",\n  \"password\": \"1234\"\n}"
        },
        "url": {
          "raw": "http://localhost:8025/auth/login",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8025",
          "path": ["auth","login"]
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "let r = pm.response.json();",
              "pm.environment.set(\"access_token\", r.access_token);",
              "pm.environment.set(\"refresh_token\", r.refresh_token);"
            ]
          }
        }
      ]
    },

    {
      "name": "Auth - Refresh Token",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"refresh_token\": \"{{refresh_token}}\"\n}"
        },
        "url": {
          "raw": "http://localhost:8025/auth/refresh",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8025",
          "path": ["auth","refresh"]
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "let r = pm.response.json();",
              "pm.environment.set(\"access_token\", r.access_token);"
            ]
          }
        }
      ]
    },

    {
