    {
      "name": "Auth - Login",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "let r = pm.response.json();",
              "pm.environment.set(\"access_token\", r.access_token);",
              "pm.environment.set(\"refresh_token\", r.refresh_token);"
            ],
            "type": "text/javascript"
          }
        }
      ],
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"username\": \"admin\",\n  \"password\": \"1234\"\n}"
        },
        "url": {
          "raw": "http://localhost:8025/auth/login",
          "protocol": "http",
          "host": [
            "localhost"
          ],
          "port": "8025",
          "path": [
            "auth",
            "login"
          ]
        }
